{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6"],
    "module": "esnext",
    "moduleResolution": "node", 
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@figma"
    ],
    "downlevelIteration": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
